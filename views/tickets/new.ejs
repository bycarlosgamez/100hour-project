<% layout('layouts/boilerplate') %>

<div class="mt-10 sm:mt-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="h-full flex flex-col justify-between">
        <div class="px-4 sm:px-0">
          <h3 class="text-lg font-medium leading-6 text-gray-900">
            Add a New Ticket
          </h3>
          <p class="mt-1 text-sm text-gray-600">
            Enter all ticket information.
          </p>
        </div>
        <div>
          <a
            href="/tickets"
            class="inline-block rounded-lg bg-indigo-600 px-4 mt-8 py-1.5 text-base font-semibold leading-7 text-white shadow-sm ring-1 ring-indigo-600 hover:bg-indigo-700 hover:ring-indigo-700"
          >
            <span class="text-indigo-200" aria-hidden="true">&larr;</span>
            Back to Tickets
          </a>
        </div>
      </div>
    </div>
    <div class="mt-5 md:col-span-2 md:mt-0">
      <!-- FORM -->
      <form action="/tickets" method="POST">
        <div class="overflow-hidden shadow sm:rounded-md">
          <div class="bg-white px-4 py-5 sm:p-6">
            <div class="grid grid-cols-6 gap-6">
              <!-- TITLE -->
              <div class="col-span-6 sm:col-span-3">
                <label
                  for="title"
                  class="block text-sm font-medium text-gray-700"
                  >Title</label
                >
                <input
                  type="text"
                  name="ticket[title]"
                  id="title"
                  class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                />
              </div>

              <!-- PROJECT -->
              <div class="col-span-6 sm:col-span-3">
                <label
                  for="project"
                  class="block text-sm font-medium text-gray-700"
                  >Project</label
                >
                <input
                  type="text"
                  name="ticket[project]"
                  id="project"
                  class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                />
              </div>

              <!-- DESCRIPTION -->
              <div class="col-span-6 sm:col-span-6">
                <label
                  for="description"
                  class="block text-sm font-medium text-gray-700"
                  >Description</label
                >
                <div class="mt-1">
                  <textarea
                    id="description"
                    name="ticket[description]"
                    rows="3"
                    class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                  ></textarea>
                </div>
                <p class="mt-2 text-sm text-gray-500">
                  Brief description for your ticket
                </p>
              </div>

              <!-- Priority-->
              <div class="col-span-6 sm:col-span-3">
                <label
                  for="priority"
                  class="block text-sm font-medium text-gray-700"
                  >Priority</label
                >
                <select
                  id="priority"
                  name="ticket[priority]"
                  class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                >
                  <option value="high">HIGH</option>
                  <option value="med">MED</option>
                  <option value="low">LOW</option>
                </select>
              </div>

              <!-- Type-->
              <div class="col-span-6 sm:col-span-3">
                <label
                  for="type"
                  class="block text-sm font-medium text-gray-700"
                  >type</label
                >
                <select
                  id="type"
                  name="ticket[type]"
                  class="mt-1 block w-full rounded-md border border-gray-300 bg-white py-2 px-3 shadow-sm focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm"
                >
                  <option value="bug">Bug / Error</option>
                  <option value="feature">Feature Request</option>
                  <option value="doccument">Document Request</option>
                  <option value="other">Other</option>
                </select>
              </div>

